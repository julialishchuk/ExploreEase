<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:padding="10dp"
    android:layout_width="match_parent"
        android:background="@drawable/bg_nearby_item"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
    android:layout_height="170dp">

    <TextView
            android:id="@+id/tv_route_name"
            android:text="Route name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textAlignment="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintStart_toEndOf="@+id/tv_start_from"
            app:layout_constraintEnd_toStartOf="@+id/bt_complete_route" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Start from:"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tv_start_from"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/tv_route_starting_point"
            android:layout_width="75dp"
            android:layout_height="103dp"
            android:textColor="@color/black"
            android:text="Lviv National Opera rfgthjjhtgrfgthgt"
            android:textSize="12dp"
            android:singleLine="false"
            android:ellipsize="end"

            app:layout_constraintTop_toBottomOf="@+id/tv_start_from"
            app:layout_constraintStart_toStartOf="@+id/tv_start_from" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_draw_route"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Start"
            android:background="@drawable/bg_button_route"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_complete_route"
            android:layout_width="66dp"
            android:layout_height="69dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_complete_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_remove_route"
            android:layout_width="60dp"
            android:layout_height="61dp"
            android:background="@drawable/ic_remove_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_complete_route" />




</androidx.constraintlayout.widget.ConstraintLayout>