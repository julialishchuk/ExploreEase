<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@color/white"
    tools:context=".ui.personal.PersonalPreferencesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@color/purple_accent_with_transparency"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/constraintLayout">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@color/purple_accent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <ImageView
                    android:layout_width="120dp"
                    android:layout_height="128dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/ic_personal_photo_round" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My trips"
                    android:textColor="@color/white"
                    android:textSize="28dp"
                    android:textStyle="bold" />


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_routes"
            android:layout_width="0dp"
            android:layout_height="124dp"
            android:layout_marginHorizontal="34dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_button_routes"
            android:fontFamily="@font/odor_mean_chey_regular"
            android:text="Routes"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_favorites"
            android:layout_width="0dp"
            android:layout_height="124dp"
            android:layout_marginHorizontal="34dp"

            android:background="@drawable/bg_button_favorites"
            android:fontFamily="@font/odor_mean_chey_regular"
            android:text="Favorites"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="24dp"
            app:layout_constraintBottom_toTopOf="@+id/button_activity_log"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_routes" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_activity_log"
        android:layout_width="0dp"
        android:layout_height="124dp"
        android:layout_marginHorizontal="34dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/bg_button_activity"
        android:fontFamily="@font/odor_mean_chey_regular"
        android:text="Activity log"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>