<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:padding="10dp"
    android:layout_width="match_parent"
        android:background="@drawable/bg_nearby_item"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
    android:layout_height="100dp">

    <TextView
            android:id="@+id/tv_place_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="nameenmghtholjmfvko"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bt_remove_place" />

    <TextView
            android:id="@+id/tv_place_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="address"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="20dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_place_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_place_name"
            app:layout_constraintEnd_toEndOf="@+id/tv_place_name" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_remove_place"
            android:layout_width="74dp"
            android:layout_height="42dp"
            android:text="remove"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/bg_button_activity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



 />


</androidx.constraintlayout.widget.ConstraintLayout>